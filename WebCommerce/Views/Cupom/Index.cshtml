@model IEnumerable<WebCommerce.Models.Classes.Cupom>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{ 
    if (User.IsInRole("Admin"))
    {
<p>
    @Html.ActionLink("Create New", "Create")
</p>
        }
    }



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescontoPorcentagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescontoPorcentagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>

        @{ if (User.IsInRole("Admin"))
            {

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>}

            else
            {
                <td>    @Html.ActionLink("Details", "Details", new { id = item.Id }) </td>
}



        }

    </tr>
}

</table>
